@model VmLogin
@{
    ViewData["Title"] = "Login";
}

<section class="bread-crumb">
    <div class="container-fluid">
        <div class="container">
            <div class="row g-0 align-items-center">
                <div class="col-md-6">
                    <div class="page-title">
                        <h1>Login</h1>
                    </div>
                </div>
                <div class="col-md-6 g-0">
                    <ol class="breadcrumb justify-content-md-end">
                        <li class="breadcrumb-item">
                            <a asp-controller="home" asp-action="index">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Login</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="login">
    <div class="container">
        <div class="row login-main">
            <div class="col-md-6">
                <h1>Login</h1>
                <form asp-controller="account" asp-action="login" method="post">
                    <div class="row g-0 pb-1 m-0 text text-danger" asp-validation-summary="All"></div>
                    <div class="row g-0">
                        <div class="col-12">
                            <div class="form-group pb-3">
                                <label asp-for="Email" class="" for="email">Username or email address&nbsp;<span class="required">*</span></label>
                                <input asp-for="Email" class="form-control" id="email" type="email" required name="email">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group pb-0">
                                <label asp-for="Password" for="password">Password&nbsp;<span class="required">*</span></label>
                                <input asp-for="Password" class="form-control" id="password" type="password" required name="password">
                                <input type="hidden" asp-for="@Model.isCart" >
                            </div>
                        </div>
                    </div>
                    <div class="row g-0">
                        <div class="col-12">
                            <div class="form-group pb-3 checkbox d-flex flex-column align-items-start">

                                <div>
                                    <label class="pb-2">
                                        <input class="" name="showpassword" type="checkbox" id="showpassword" value=""> <span>Show Password</span>
                                    </label>
                                </div>

                                <div>
                                    <div class="forgot-box" style="text-align:left">
                                        <a class="text-left" asp-controller="account" asp-action="forgotpassword">Forgot Password?</a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row g-0">
                        <div class="col-6 pb-3">
                            <div class="form-group">
                                <button type="submit" class="close animate-button">Log In</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


@model VmProfile

@{
    ViewData["Title"] = "UpdateProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Bread Crumb-->
<section class="bread-crumb">
    <div class="container-fluid">
        <div class="container">
            <div class="row g-0 align-items-center">
                <div class="col-md-6">
                    <div class="page-title">
                        <h1>Update Profile</h1>
                    </div>
                </div>
                <div class="col-md-6 g-0">
                    <ol class="breadcrumb justify-content-md-end">
                        <li class="breadcrumb-item">
                            <a asp-controller="home" asp-action="index">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="account" asp-action="profile">Profile</a>
                        </li>
                        <li class="breadcrumb-item active">Update Profile</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<!--Profile-->
<section class="profile-update p-3 p-md-5">

    <div class="container">
        <div class="main-body">

            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card side">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center mt-3">
                                @if (Model.Image != null)
                                {
                                    <img src="~/Uploads/Images/User/@Model.Image" alt="Admin" class="rounded-circle" width="150">
                                }
                                else
                                {
                                    <img src="https://png.pngtree.com/png-vector/20191101/ourlarge/pngtree-businessman-avatar-icon-flat-style-png-image_1917273.jpg" alt="Admin" class="rounded-circle" width="150">
                                }
                            <div class="mt-3">
                                <h4>@Model.Name @Model.Surname</h4>
                                <p class="text-muted font-size-sm">@Model.Email</p>
                                <div>
                                    @if (Model.Image == null)
                                    {
                                        <button class="animate-button close change-picture-btn">Add Image</button>
                                    }
                                    else
                                    {
                                        <button class="animate-button close change-picture-btn">Change Image</button>
                                    }
                                </div>
                                
                                <div class="mt-3">
                                    <a asp-controller="account" asp-action="changepassword" class="animate-button close change-password-btn">Change Password</a>
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <form asp-controller="account" asp-action="updaateprofile" method="post" enctype="multipart/form-data">
                                <div class="row input-box">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Name</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input asp-for="@Model.Name" type="text" placeholder="Your Name">
                                    </div>
                                </div>
                                <hr>
                                <div class="row input-box">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Surname</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input asp-for="@Model.Surname" type="text" placeholder="Your Surname">
                                    </div>
                                </div>
                                <hr>
                                <div class="row input-box">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input asp-for="@Model.Email" type="text" placeholder="Your Email">
                                    </div>
                                </div>
                                <hr>
                                <div class="row input-box">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Phone</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input asp-for="@Model.Phone" data-mask="(000) 000 00 00" type="text" placeholder="Your Phone">
                                    </div>
                                </div>
                                <hr>
                                <div class="row input-box">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">ZipCode</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input asp-for="@Model.Zipcode" type="text" placeholder="Your ZipCode">
                                    </div>
                                </div>
                                <hr>
                                <div class="row input-box">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">State</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input asp-for="@Model.State" type="text" placeholder="Your State">
                                    </div>
                                </div>
                                <hr>
                                <div style="height: 35px" class="row input-box">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Country</h6>
                                    </div>
                                    <div class="col-sm-9 select-country text-secondary g-0">
                                        <select asp-for="@Model.CountryId" asp-items="@(new SelectList(ViewBag.Country,"Id","Name"))" class="form-select" id="selectlistitems" aria-label="Default select example">
                                        </select>
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group">
                                    <div class="mb-3">
                                        <input asp-for="@Model.ImageFile" hidden class="form-control hidden-img-input" type="file" id="formFile">
                                    </div>
                                    <span class="text-danger" asp-validation-for="@Model.ImageFile"></span>
                                    <input type="hidden" asp-for="@Model.Image" />
                                </div>

                                <div class="row">
                                    <div class="col-sm-12 p-2 pt-3">
                                        <button type="submit" class="animate-button close" asp-controller="account" asp-action="updateprofile">Submit</button>
                                    </div>
                                </div>
                            </form>
                           
                        </div>
                    </div>

                    <div class="row gutters-sm">

                    </div>

                </div>
            </div>

        </div>
    </div>

</section>


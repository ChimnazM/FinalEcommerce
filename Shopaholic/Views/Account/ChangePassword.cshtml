@model VmChangePassword
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="bread-crumb">
    <div class="container-fluid">
        <div class="container">
            <div class="row g-0 align-items-center">
                <div class="col-md-6">
                    <div class="page-title">
                        <h1>Change Password</h1>
                    </div>
                </div>
                <div class="col-md-6 g-0">
                    <ol class="breadcrumb justify-content-md-end">
                        <li class="breadcrumb-item">
                            <a asp-controller="account" asp-action="profile">Profile</a>
                        </li>
                        <li class="breadcrumb-item active">Change Password</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="login">
    <div class="container">
        <div class="row login-main">
            <div class="col-md-6">
                <h1>Change Password</h1>
                <form asp-controller="account" asp-action="ChangePassword" method="post">
                    <div class="row g-0 pb-1 m-0 text text-danger" asp-validation-summary="All"></div>
                    <div class="row g-0">
                        <div class="col-12">
                            <div class="form-group pb-3">
                                <label asp-for="CurrentPassword" class="" for="CurrentPassword">Current Password&nbsp;<span class="required">*</span></label>
                                <input asp-for="CurrentPassword" class="form-control" id="CurrentPassword" type="password" required>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group pb-3">
                                <label asp-for="NewPassword" for="NewPassword">New Password&nbsp;<span class="required">*</span></label>
                                <input asp-for="NewPassword" class="form-control" id="NewPassword" type="password" required>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group pb-0">
                                <label asp-for="ConfirmNewPassword" for="password">Confirm New Password&nbsp;<span class="required">*</span></label>
                                <input asp-for="ConfirmNewPassword" class="form-control" id="ConfirmNewPassword" type="password" required>
                            </div>
                        </div>
                    </div>
                    <div class="row g-0">
                        <div class="col-12">
                            <div class="form-group pb-3 checkbox d-flex flex-column align-items-start">

                                <div>
                                    <label class="pb-2">
                                        <input class="" name="showpassword" type="checkbox" id="showpassword" value=""> <span>Show Password</span>
                                    </label>
                                </div>

                                <div>
                                    <div class="forgot-box" style="text-align:left">
                                        <a class="text-left" asp-controller="account" asp-action="forgotpassword">Forgot Password?</a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row g-0">
                        <div class="col-6 pb-3">
                            <div class="form-group">
                                <button type="submit" class="close animate-button">Submit</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


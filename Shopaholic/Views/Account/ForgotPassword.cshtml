@model VmForgotPassword
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="bread-crumb">
    <div class="container-fluid">
        <div class="container">
            <div class="row g-0 align-items-center">
                <div class="col-md-6">
                    <div class="page-title">
                        <h1>Forgot Password</h1>
                    </div>
                </div>
                <div class="col-md-6 g-0">
                    <ol class="breadcrumb justify-content-md-end">
                        <li class="breadcrumb-item">
                            <a href="">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Forgot Password</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="login">
    <div class="container">
        <div class="row login-main">
            <div class="col-md-6">
                <h1>Enter Email</h1>
                <form asp-controller="account" asp-action="forgotpassword" method="post">
                    <div class="row g-0 pb-1 m-0 text text-danger" asp-validation-summary="All"></div>

                    <div class="row g-0">
                        <div class="col-12">
                            <div class="form-group">
                                <p class="privacy-info">If you continue, Shopwise will send a message to the e-mail address in your profile. Click the link in the message, and enter a new password on the page that opens.</p>
                            </div>
                        </div>
                    </div>

                    <div class="row g-0">
                        <div class="col-12">
                            <div class="form-group pb-3">
                                <label asp-for="Email" class="" for="email">Email address&nbsp;<span class="required">*</span></label>
                                <input asp-for="Email" class="form-control" id="email" type="email" required name="email">
                            </div>
                        </div>
                    </div>
                    <div class="row g-0">
                        <div class="col-6 pb-3">
                            <div class="form-group">
                                <button type="submit" class="close animate-button">Continue</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


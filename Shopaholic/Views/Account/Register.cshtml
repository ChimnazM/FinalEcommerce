@model VmRegister

@{
    ViewData["Title"] = "Register";
}

<section class="bread-crumb">
    <div class="container-fluid">
        <div class="container">
            <div class="row g-0 align-items-center">
                <div class="col-md-6">
                    <div class="page-title">
                        <h1>Register</h1>
                    </div>
                </div>
                <div class="col-md-6 g-0">
                    <ol class="breadcrumb justify-content-md-end">
                        <li class="breadcrumb-item">
                            <a href="">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Register</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="register">
    <div class="container">
        <div class="row login-main">
            <div class="col-md-6">
                <h1>Register</h1>
                <form asp-controller="account" asp-action="register" method="post">
                    <div class="row g-0 pb-1 m-0 text text-danger" asp-validation-summary="All"></div>
                    <div class="row g-0">
                        <div class="col-12">
                            <div class="form-group pb-1">
                                <label asp-for="Name" for="name">Name<span class="required">*</span></label>
                                <input asp-for="Name" class="form-control" id="name" type="text" required name="name">
                                <span asp-validation-for="Name"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group pb-1">
                                <label asp-for="Surname" for="surname">Surname<span class="required">*</span></label>
                                <input asp-for="Surname" class="form-control" id="surname" type="text" required name="surname">
                                <span asp-validation-for="Surname"></span>

                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group pb-1">
                                <label asp-for="Email" for="email">Email address<span class="required">*</span></label>
                                <input asp-for="Email" class="form-control" id="email" type="email" required name="email">
                                <span asp-validation-for="Email"></span>

                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group pb-1">
                                <label asp-for="Password" for="password">Password&nbsp;<span class="required">*</span></label>
                                <input asp-for="Password" class="form-control" id="password" type="password" required name="password">
                                <span asp-validation-for="Password"></span>

                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group pb-1">
                                <label asp-for="ConfirmPassword" for="confirmPassword">Confirm Password&nbsp;<span class="required">*</span></label>
                                <input asp-for="ConfirmPassword" class="form-control" id="confirmPassword" type="password" required name="confirmPassword">
                                <span asp-validation-for="ConfirmPassword"></span>

                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group pb-3 checkbox d-flex flex-column align-items-start">
                                <div>
                                    <label class="pb-2">
                                        <input class="" name="showpassword" type="checkbox" id="showpassword" value=""> <span>Show Password</span>
                                    </label>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row g-0">
                        <div class="col-12">
                            <div class="form-group">
                                <p class="privacy-info">Your personal data will be used to support your experience throughout this website, to manage access to your account, and for other purposes described in our privacy policy.</p>
                            </div>
                        </div>
                    </div>
                    <div class="row g-0">
                        <div class="col-6 pb-3">
                            <div class="form-group">
                                <button type="submit" class="close animate-button">Register</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

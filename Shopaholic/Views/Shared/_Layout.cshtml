@model VmBase
@using Microsoft.AspNetCore.Identity;
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shopaholic - @ViewData["Title"]</title>

    <link class="tab-icon" rel="icon" href="~/img/icons/tab-icon.webp">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css" integrity="sha512-NmLkDIU1C/C88wi324HBc+S2kLhi08PN5GDeUVVVC/BVt/9Izdsc9SVeVfA1UZbY3sHUlDSyRXhCzHfr6hmPPw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800;900&display=swap" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous" />



    <!-- owl -->
    <!-- Basic stylesheet -->
    <link rel="stylesheet" href="~/css/owl.carousel.css">

    <!-- Default Theme -->
    <link rel="stylesheet" href="~/css/owl.theme.css">

    <!-- Animate -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/css/themify-icons.css">

    <link rel="stylesheet" href="~/css/style.css" />



    <!-- Toastr -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" integrity="sha512-6S2HWzVFxruDlZxI3sXOZZ4/eJ8AcxkQH1+JjSe/ONCEqR9L4Ysq5JdT5ipqtzU7WHalNwzwBv+iE51gNHJNqQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link href="~/css/sweetalert2.min.css" rel="stylesheet" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/TweenMax.min.js"></script>


</head>
<body>

    <!-- PreLoader -->
    @*<div class="loader-container">
        <img src="~/img/icons/preloader.svg" alt="">
    </div>*@

    <!--Navbar-->
    <header>
        <div class="super_container fixed-nav">
            <!-- Header -->
            <div class="header">

                <!-- Top Bar-->
                <div class="top_bar">
                    <div class="container">
                        <div class="row">
                            <div class="col top-nav-box">
                                <div class="top_bar_contact_item">
                                    <div class="top_bar_icon">

                                        <i class="@Model.Contacts.FirstOrDefault(s=>s.Type == "Phone").Icon"></i>
                                        <a href="tel: @Model.Contacts.FirstOrDefault(s=>s.Type == "Phone").Address">@Model.Contacts.FirstOrDefault(s => s.Type == "Phone").Address</a>

                                    </div>
                                    <div class="top_bar_icon">

                                        <i class="@Model.Contacts.FirstOrDefault(s=>s.Type == "Email").Icon"></i>
                                        <a href="mailto:@Model.Contacts.FirstOrDefault(s=>s.Type == "Email").Address">@Model.Contacts.FirstOrDefault(s => s.Type == "Email").Address</a>

                                    </div>

                                </div>
                                <div class="top_bar_content">
                                    <div class="top-bar-user">

                                        <div class="user-icon">
                                            @if (SignInManager.IsSignedIn(User))
                                            {
                                <a asp-controller="account" asp-action="profile"><p>My Profile</p></a> }
                            else
                            {
                <a asp-controller="account" asp-action="login"><p>Login</p></a>}

                                            <!-- Profile Button-->
                                            <button type="button" class="profile-btn">
                                                <i class="fas fa-user"></i>
                                            </button>
                                            <ul class="profile-dropdown">
                                                @if (SignInManager.IsSignedIn(User))
                                                {
                                                    <li><a asp-controller="account" asp-action="profile"><h1>@UserManager.GetUserName(User)</h1></a></li>

                                                    <li><a asp-controller="account" asp-action="logout" class="animate-button close">Logout</a></li> 
                                                 }
                                                                else
                                                                {
                                                    <li><a asp-controller="account" asp-action="login" class="animate-button close">Login</a></li>
                                                                    <li><a asp-controller="account" asp-action="register" class="animate-button close register-btn">Register</a></li>}
                                            </ul>
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Header Main -->
                <div class="header_main">
                    <div class="container">
                        <div class="row">
                            <!-- Logo -->
                            <div class="col-lg-2 col-sm-3 col-3 order-1">
                                <div class="logo_container">
                                    <div class="logo">
                                        <a asp-controller="home" asp-action="index">
                                            @if (@Model.Setting != null)
                                            {
                                <img src="~/Uploads/Images/@Model.Setting.HeaderLogo" alt="Shopaholic" />}
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!-- Search -->
                            <div class="
                    col-lg-6 col-12
                    order-lg-2 order-3
                    text-lg-left text-right
                  ">
                                <div class="header_search">
                                    <div class="header_search_content">
                                        <div class="header_search_form_container">
                                            <form asp-controller="shop" asp-action="index" method="get" autocomplete="off" class="header_search_form clearfix">
                                                <input type="search"
                                                       required="required"
                                                       class="header_search_input"
                                                       placeholder="Search for products..."
                                                       name="searchData" />
                                                <div class="custom_dropdown" style="display: none">
                                                    <div class="custom_dropdown_list">
                                                        <span class="custom_dropdown_placeholder clc">All Categories</span>
                                                        <i class="fas fa-chevron-down"></i>
                                                        <ul class="custom_list clc">
                                                        </ul>
                                                    </div>
                                                </div>
                                                <button type="submit"
                                                        class="header_search_button trans_300"
                                                        value="Submit">
                                                    <i class="fas fa-search fa-lg"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Wishlist -->
                            <div class="
                    col-lg-4 col-9
                    order-lg-3 order-2
                    text-lg-left text-right
                  ">
                                <div class="
                      wishlist_cart
                      d-flex
                      flex-row
                      align-items-center
                      justify-content-end
                    ">
                                    <div class="
                        wishlist
                        d-flex
                        flex-row
                        align-items-center
                        justify-content-end
                      ">
                                        <div class="wishlist_icon">
                                            <a asp-controller="shop" asp-action="wish">
                                                <i class="far fa-heart fa-2x"></i>
                                            </a>
                                        </div>
                                        <div class="wishlist_content">
                                            <div class="wishlist_text"><a asp-controller="shop" asp-action="wish">Wishlist</a></div>
                                            <div class="wishlist_count">0</div>
                                        </div>
                                    </div>
                                    <!-- Cart -->
                                    <div class="cart">
                                        <div class="
                          cart_container
                          d-flex
                          flex-row
                          align-items-center
                          justify-content-end
                        ">
                                            <div class="cart_icon">
                                                <a asp-controller="shop" asp-action="cart">
                                                    <i class="fas fa-shopping-bag fa-2x"></i>
                                                    <div class="cart_count"><span></span></div>
                                                </a>

                                            </div>
                                            <div class="cart_content">
                                                <div class="cart_text"><a asp-controller="shop" asp-action="cart">Cart</a></div>
                                                <div class="cart_price">$0</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Main Navigation -->
                <nav class="main_nav">
                    <div class="container-fluid g-0">
                        <div class="row">
                            <div class="col">
                                <div class="main_nav_content d-flex flex-row">
                                    <!-- Categories Menu -->
                                    <!-- Main Nav Menu -->
                                    <div class="main_nav_menu">
                                        <ul class="standard_dropdown main_nav_dropdown">
                                            <li><a asp-controller="home" asp-action="index" class="@((ViewData["Title"].ToString()=="Home")?"active":"")">Home<i class="fas fa-chevron-down"></i></a></li>
                                            <li><a asp-controller="about" asp-action="index" class="@((ViewData["Title"].ToString()=="About")?"active":"")">About<i class="fas fa-chevron-down"></i></a></li>
                                            <li><a asp-controller="shop" asp-action="index" class="@((ViewData["Title"].ToString()=="Shop")?"active":"")">Shop<i class="fas fa-chevron-down"></i></a></li>
                                            <li><a asp-controller="faq" asp-action="index" class="@((ViewData["Title"].ToString()=="Faq")?"active":"")">Faq<i class="fas fa-chevron-down"></i></a></li>
                                            <li><a asp-controller="contact" asp-action="index" class="@((ViewData["Title"].ToString()=="Contact")?"active":"")">Contact<i class="fas fa-chevron-down"></i></a></li>
                                        </ul>
                                    </div>
                                    <!-- Menu Trigger -->
                                    <div class="menu_trigger_container ml-auto">
                                        <div class=" menu_trigger d-flex flex-row align-items-center justify-content-end">
                                            <div class="menu_burger">
                                                <div class="menu_trigger_text">menu</div>
                                                <div id="isOpen" class="cat_burger menu_burger_inner">
                                                    <span></span><span></span><span></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </nav>

                <!-- Menu -->
                <div class="page_menu">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <div class="page_menu_content">
                                    <div class="page_menu_search">
                                        <form asp-controller="shop" asp-action="index" method="get">
                                            <input type="search"
                                                   required="required"
                                                   class="page_menu_search_input"
                                                   placeholder="Search for products..."
                                                   name="searchData" />
                                            <button class="nav-search-button" type="submit"><i class="fas fa-search"></i></button>
                                        </form>
                                    </div>
                                    <ul class="page_menu_nav">
                                        <li class="page_menu_item has-children">
                                            <a asp-controller="home" asp-action="index">Home</a>
                                        </li>
                                        <li class="page_menu_item has-children">
                                            <a asp-controller="about" asp-action="index">About</a>
                                        </li>
                                        <li class="page_menu_item has-children">
                                            <a asp-controller="faq" asp-action="index">Faq</a>
                                        </li>
                                        <li class="page_menu_item has-children">
                                            <a asp-controller="shop" asp-action="index">Shop</a>
                                        </li>
                                        <li class="page_menu_item has-children">
                                            <a asp-controller="contact" asp-action="index">Contact</a>
                                        </li>
                                    </ul>
                                    <div class="menu_contact">
                                        <div class="menu_contact_item">
                                        </div>
                                        <div class="menu_contact_item">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    @RenderBody()

    <!--Subscribe-->
    <section class="subscribe">
        <div class="container-fluid subs-cont">
            <div class="container nested-cont">
                <div class="row g-0 align-items-center ">
                    <div class="col-12 col-md-5 pb-2 pb-sm-0 offset-0 offset-md-1 subs-text mb-xs-2 mb-sm-2">
                        <h1>@Model.Universals.FirstOrDefault(s => s.Section == "Subscribe").Title</h1>
                    </div>
                    <div class="col-12 col-md-5 offset-md-12 subs-form-box">
                        <form id="subscribe-form" method="post">
                            <div class="d-flex">
                                <input type="email" class="form-control" placeholder="Your email address" id="subscribe-input" aria-describedby="emailHelp">
                                <button type="submit" class="form-button">Sign Up</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </section>

    <!--Footer-->
    <footer>
        <div class="container-fluid footer">
            <div class="container">
                <div class="row g-0 footer-top-part justify-content-md-between">

                    <div class="col-lg-3 col-md-6 col-sm-12 my-3 my-md-0">
                        <div class="main-footer">
                            <!--Logo and info-->
                            <div class="top-footer-info">
                                @if (Model.Setting != null)
                                {
                    @*<a asp-controller="home" asp-action="index"><img src="~/Uploads/Images/@Model.Setting.FooterLogo" alt="footer-logo"></a>*@
                                    @Html.Raw(Model.Setting.About)}
                            </div>
                            <!--Socials-->
                            <ul class="social-icons">
                                @foreach (var item in Model.Socials)
                                {
                    <li><a href="@item.Link"><i class="@item.Icon"></i></a></li>}
                            </ul>
                        </div>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-6 my-3 my-md-0">
                        <div class="useful-links">
                            <h1>Useful Links</h1>
                            <div class="useful-listbox">
                                <ul>
                                    <li><a asp-controller="about" asp-action="index">About Us</a></li>
                                    <li><a asp-controller="shop" asp-action="index">Shop</a></li>
                                    <li><a asp-controller="faq" asp-action="index">Faq</a></li>
                                    <li><a asp-controller="contact" asp-action="index">Location</a></li>
                                    <li><a asp-controller="contact" asp-action="index">Contact</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-6 my-3 my-md-0">
                        <div class="category">
                            <h2>Category</h2>
                            <div class="category-listbox">
                                <ul>
                                    <li><a asp-controller="shop" asp-action="index" asp-route-genId="1">Men</a></li>
                                    <li><a asp-controller="shop" asp-action="index" asp-route-genId="2">Women</a></li>
                                    <li><a asp-controller="shop" asp-action="index" asp-route-genId="3">Kid’s</a></li>
                                    <li><a asp-controller="shop" asp-action="index" asp-route-catId="4">Special Offer</a></li>
                                    <li><a asp-controller="shop" asp-action="index" asp-route-catId="1">Best Sellers</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>


                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="contact-info">
                            <h4>Contact Info</h4>
                            <div class="contact-listbox">
                                <ul>

                                    <li>
                                        <a href="@Model.ContactInfo.Map" target="_blank">
                                            <i class="@Model.Contacts.FirstOrDefault(s=>s.Type == "Address").Icon"></i>
                                            <address>@Model.Contacts.FirstOrDefault(s => s.Type == "Address").Address</address>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="mailto:@Model.Contacts.FirstOrDefault(s=>s.Type == "Email").Address">
                                            <i class="@Model.Contacts.FirstOrDefault(s=>s.Type == "Email").Icon"></i>
                                            <p>@Model.Contacts.FirstOrDefault(s => s.Type == "Email").Address</p>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="tel:@Model.Contacts.FirstOrDefault(s=>s.Type == "Phone").Address">
                                            <i class="@Model.Contacts.FirstOrDefault(s=>s.Type == "Phone").Icon"></i>
                                            <p>@Model.Contacts.FirstOrDefault(s => s.Type == "Phone").Address</p>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row g-0 footer-bottom-part">
                    <div class="col-md-6"><p class="mb-md-0  text-md-left text-lg-left"></p></div>
                    <div class="col-md-6">
                        <ul class="footer-payment text-center text-lg-right">
                            @foreach (var item in Model.Payments)
                            {
                <li><img src="~/Uploads/Images/@item.Image" alt=""></li>}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!--Cart Tosast -->
    <div class="add-to-card-toast">
        <div class="toast-box animate__animated animate__fadeInUp row g-0">
            <div class="cart_icon g-0 p-2 m-2 col-3">
                <i class="fas fa-shopping-bag fa-2x"></i>
                <div class="cart_count animate__animated animate__bounce"><span>0</span></div>
            </div>
            <div class="toast-content g-0 p-2 my-2 col-9">
                <a asp-controller="shop" asp-action="cart">
                    <span class="added-prd-name"></span>
                </a>
                <p>Added to Card</p>
            </div>
        </div>
    </div>

    <!--Wishlist Tosast -->
    <div class="add-to-wish-toast">
        <div class="wish-toast-box animate__animated animate__fadeInUp row">
            <div class="wish_cart_icon g-0 p-2 col-2">
                <i class="fas fa-heart fa-2x  animate__animated animate__heartBeat"></i>
            </div>
            <div class="wish-toast-content g-0 p-2 col-10">
                <a asp-controller="shop" asp-action="wish">
                    <span class="added-prd-name"></span>
                </a>
                <p>Added to Wishlist</p>
            </div>
        </div>
    </div>




    <!-- Scroll top button -->
    <button class="scroll-top-btn animate__animated animate__rotateIn"><i class="fas fa-arrow-up"></i></button>


    


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/TweenMax.min.js"></script>

    <!-- jquery validation -->
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.js"></script>

    <!-- isotope -->
    <script src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.js"></script>
    <script src="~/js/isotope.pkgd.min.js"></script>

    <!-- Include js plugin OWL -->
    <script src="~/js/owl.carousel.js"></script>

    <!-- Zoom image -->
    <script src="~/js/jquery.izoomify.js"></script>

    <!-- Toastr -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- Sweetalert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <!-- jquery mask for checkout -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js" integrity="sha512-pHVGpX7F/27yZ0ISY+VVjyULApbDlD0/X0rgGbTqCE7WFW5MezNTWG/dnhtbBuICzsd0WQPgpE4REBLv+UqChw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    

    <script src="~/js/script.js"></script>

    <!-- x -->
    <script src="~/js/sweetalert2.min.js"></script>
    @await Html.PartialAsync("_notificationPartial")

    @RenderSection("Scripts", required: false)
</body>
</html>

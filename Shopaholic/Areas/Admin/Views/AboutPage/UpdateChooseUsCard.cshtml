@model ChooseUs
@{
    ViewData["Title"] = "UpdateChooseUsCard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Update Choose Us Card</h4>

                    <form asp-area="admin" asp-controller="aboutpage" asp-action="updateChooseUsCard" method="post" class="forms-sample" enctype="multipart/form-data">
                        @*<div class="text-danger" asp-validation-summary="All"></div>*@
                        <div class="form-group">
                            <label asp-for="@Model.Title" for="title">Title</label>
                            <input asp-for="@Model.Title" type="text" class="form-control" id="title" placeholder="Title">
                            <span class="text-danger" asp-validation-for="@Model.Title"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.Context" for="text">Text</label>
                            <textarea asp-for="@Model.Context" type="text" class="form-control" id="text" placeholder="Text"></textarea>
                            <span class="text-danger" asp-validation-for="@Model.Context"></span>
                        </div>
                        <div class="form-group">
                            <div class="mb-3">
                                <label asp-for="@Model.ImageFile" for="formFile" class="form-label">Icon File (svg)</label>
                                <input asp-for="@Model.ImageFile" class="form-control" type="file" id="formFile">
                            </div>
                            <span class="text-danger" asp-validation-for="@Model.ImageFile"></span>
                        </div>
                        <div class="mt-3 mb-3">
                            <img style="border-radius: 0; height:50px !important; width:auto !important" src="~/Uploads/Icons/@Model.Icon" alt="Alternate Text" />
                            <input type="hidden" asp-for="@Model.Id" />
                            <input type="hidden" asp-for="@Model.Icon" />
                        </div>


                        <button type="submit" class="btn btn-success mr-2">Update</button>
                        <button asp-area="admin" asp-controller="aboutpage" asp-action="ChooseUs" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



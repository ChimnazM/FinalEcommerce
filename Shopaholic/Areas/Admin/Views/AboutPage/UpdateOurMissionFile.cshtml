@model MissionFile

@{
    ViewData["Title"] = "UpdateOurMissionFile";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Update Our Mission File</h4>

                    <form asp-area="admin" asp-controller="aboutpage" asp-action="UpdateOurMissionFile" method="post" class="forms-sample" enctype="multipart/form-data">
                        @*<div class="text-danger" asp-validation-summary="All"></div>*@
                        <div class="form-group">
                            <label asp-for="@Model.Link" for="link">Video Link</label>
                            <input asp-for="@Model.Link" type="text" class="form-control" id="link" placeholder="Video Link">
                            <span class="text-danger" asp-validation-for="@Model.Link"></span>
                        </div>

                        <div class="form-group">
                            <div class="mb-3">
                                <label asp-for="@Model.ImageFile" for="formFile" class="form-label">Image</label>
                                <input asp-for="@Model.ImageFile" class="form-control" type="file" id="formFile">
                            </div>
                            <span class="text-danger" asp-validation-for="@Model.ImageFile"></span>
                        </div>
                        <div class="mt-3 mb-3">
                            <img style="border-radius: 0; height:100px !important; width:auto !important" src="~/Uploads/Images/@Model.Image" alt="Alternate Text" />
                            <input type="hidden" asp-for="@Model.Id" />
                            <input type="hidden" asp-for="@Model.Image" />
                        </div>



                        <button type="submit" class="btn btn-success mr-2">Create</button>
                        <button asp-area="admin" asp-controller="aboutpage" asp-action="OurMission" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@model VmChooseUs
@{
    ViewData["Title"] = "ChooseUs";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <!--Header-->
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Choose Us Header</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        @if (Model.Universal == null)
                                        {
                                            <a asp-area="admin" asp-controller="aboutpage" asp-action="createChooseUsHeader" class="btn btn-success btn-rounded btn-fw">Create Choose Us Header</a>
                                        }
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>

                                    <td>
                                        @(Model.Universal != null?Model.Universal.Title:"")
                                    </td>
                                    <td>
                                        @Html.Raw(Model.Universal != null ? Model.Universal.Desc : "")
                                    </td>
                                    <td>
                                        @if (Model.Universal != null)
                                        {
                                            <a asp-area="admin" asp-controller="aboutpage" asp-action="updateChooseUsHeader" asp-route-id="@Model.Universal.Id" class="btn btn-warning" title="Update"><i class="mdi mdi-update"></i></a>
                                            <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="aboutpage" asp-action="deleteChooseUsHeader" asp-route-id="@Model.Universal.Id" class="btn btn-danger" title="delete"><i class="mdi mdi-delete"></i></a>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Cards-->
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Cards</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Icon
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Text
                                    </th>
                                    <th>
                                        <a asp-area="admin" asp-controller="aboutpage" asp-action="createChooseUsCard" class="btn btn-success btn-rounded btn-fw">Create Choose Us Card</a>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.ChooseUs != null)
                                {
                                    @foreach (var item in Model.ChooseUs)
                                    {
                                    <tr>

                                        <td>
                                            @if (Model.ChooseUs != null)
                                            {
                                                <img style="border-radius: 0 !important" src="~/Uploads/Icons/@item.Icon" alt="" />
                                            }
                                        </td>

                                        <td>
                                            @(item.Title != null? item.Title:"")
                                        </td>
                                        <td>
                                            @Html.Raw(item.Context != null ? item.Context : "")

                                        </td>
                                        <td>
                                            <a asp-area="admin" asp-controller="aboutpage" asp-action="updateChooseUsCard" asp-route-id="@item.Id" class="btn btn-warning" title="Update"><i class="mdi mdi-update"></i></a>
                                            <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="aboutpage" asp-action="deleteChooseUsCard" asp-route-id="@item.Id" class="btn btn-danger" title="delete"><i class="mdi mdi-delete"></i></a>
                                        </td>
                                    </tr>

                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>


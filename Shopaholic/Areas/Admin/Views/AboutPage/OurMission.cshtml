@model VmMission
@{
    ViewData["Title"] = "OurMission";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <!--Header-->
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Our Mission Header</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        @if (Model.Universal == null)
                                        {
                                            <a asp-area="admin" asp-controller="aboutpage" asp-action="CreateOurMissionHeader" class="btn btn-success btn-rounded btn-fw">Create Our Mission Header</a>
                                        }
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>

                                    <td>
                                        @(Model.Universal != null? Model.Universal.Title:"")
                                    </td>
                                    <td>
                                        @Html.Raw(Model.Universal != null ? Model.Universal.Desc : "")

                                    </td>
                                    <td>
                                        @if (Model.Universal != null)
                                        {
                                            <a asp-area="admin" asp-controller="aboutpage" asp-action="UpdateOurMissionHeader" asp-route-id="@Model.Universal.Id" class="btn btn-warning" title="Update"><i class="mdi mdi-update"></i></a>
                                            <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="aboutpage" asp-action="DeleteOurMissionHeader" asp-route-id="@Model.Universal.Id" class="btn btn-danger" title="delete"><i class="mdi mdi-delete"></i></a>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Features-->
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Features</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Icon
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Text
                                    </th>
                                    <th>
                                        @if (Model.MissionFeatures == null)
                                        {
                                            <a asp-area="admin" asp-controller="aboutpage" asp-action="CreateOurMissionCard" class="btn btn-success btn-rounded btn-fw">Create Our Mission Feature</a>
                                        }
                                        @if (Model.MissionFeatures != null)
                                        {
                                            @if (Model.MissionFeatures.Count < 2)
                                            {
                                                <a asp-area="admin" asp-controller="aboutpage" asp-action="CreateOurMissionCard" class="btn btn-success btn-rounded btn-fw">Create Our Mission Feature</a>
                                            }
                                        }

                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.MissionFeatures != null)
                                {
                                    @foreach (var item in Model.MissionFeatures)
                                    {
                                    <tr>

                                        <td>
                                            <i class="@item.Icon"></i>
                                            <img style="border-radius: 0 !important" src="~/Uploads/Icons/@item.Icon" alt="" />
                                        </td>

                                        <td>
                                            @item.Title
                                        </td>
                                        <td>
                                            @Html.Raw(item.Text)
                                        </td>
                                        <td>
                                            <a asp-area="admin" asp-controller="aboutpage" asp-action="UpdateOurMissionCard" asp-route-id="@item.Id" class="btn btn-warning" title="Update"><i class="mdi mdi-update"></i></a>
                                            <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="aboutpage" asp-action="DeleteOurMissionCard" asp-route-id="@item.Id" class="btn btn-danger" title="delete"><i class="mdi mdi-delete"></i></a>
                                        </td>
                                    </tr>

                                    }   
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Files-->
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Mission Image and Video link</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Video Link
                                    </th>
                                    <th>
                                        @if (Model.MissionFile == null)
                                        {
                                            <a asp-area="admin" asp-controller="aboutpage" asp-action="CreateOurMissionFile" class="btn btn-success btn-rounded btn-fw">Create Our Mission File</a>
                                        }
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.MissionFile != null)
                                {
                                    <tr>
                                        <td>
                                            <img style="width: auto !important; height:70px !important; border-radius: 0" src="~/Uploads/Images/@Model.MissionFile.Image" alt="image">
                                        </td>
                                        <td>
                                            @Model.MissionFile.Link
                                        </td>
                                        <td>
                                            <a asp-area="admin" asp-controller="aboutpage" asp-action="UpdateOurMissionFile" asp-route-id="@Model.MissionFile.Id" class="btn btn-warning" title="Update"><i class="mdi mdi-update"></i></a>
                                            <a asp-area="admin" asp-controller="aboutpage" asp-action="DeleteOurMissionFile" asp-route-id="@Model.MissionFile.Id" class="btn btn-danger" title="delete"><i class="mdi mdi-delete"></i></a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


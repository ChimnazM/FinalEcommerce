@model VmProduct
@{
    ViewData["Title"] = "Infos";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Product Description</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        @if (Model.ProductDescription == null)
                                        {
                                            <a asp-area="admin" asp-controller="product" asp-action="CreateDescription" asp-route-prodId="@Model.Product.Id" class="btn btn-success btn-rounded btn-fw">Create</a>
                                        }
                                    </th>
                                </tr>
                            </thead>
                            @if (Model.ProductDescription != null)
                            {
                                <tbody>
                                    <tr>
                                        <td>
                                            @Html.Raw(Model.ProductDescription != null ? Model.ProductDescription.Text : "")
                                        </td>
                                        <td>
                                            <a class="btn btn-warning" title="Update" asp-area="admin" asp-controller="product" asp-action="UpdateDescription" asp-route-id="@Model.ProductDescription.Id"><i class="mdi mdi-update"></i></a>
                                            <a onclick="return confirm('Are you sure?')" class="btn btn-danger" title="delete" asp-area="admin" asp-controller="product" asp-action="DeleteDescription" asp-route-id="@Model.ProductDescription.Id"><i class="mdi mdi-delete"></i></a>
                                        </td>
                                    </tr>
                                </tbody>

                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Product Features</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Feature
                                    </th>
                                    <th>
                                        @if (Model.ProductFeatures.Count < 3)
                                        {
                                            <a asp-area="admin" asp-controller="product" asp-action="CreateFeature" asp-route-prodId="@Model.Product.Id" class="btn btn-success btn-rounded btn-fw">Create</a>
                                        }
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ProductFeatures)
                                {
                                    <tr>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            <a class="btn btn-warning" title="Update" asp-area="admin" asp-controller="product" asp-action="UpdateFeature" asp-route-id="@item.Id"><i class="mdi mdi-update"></i></a>
                                            <a onclick="return confirm('Are you sure?')" class="btn btn-danger" title="delete" asp-area="admin" asp-controller="product" asp-action="DeleteFeature" asp-route-id="@item.Id"><i class="mdi mdi-delete"></i></a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


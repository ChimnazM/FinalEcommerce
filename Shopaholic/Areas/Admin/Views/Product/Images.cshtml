@model VmProduct
@{
    ViewData["Title"] = "Images";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Product Images</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr class="text-center font-weight-bold">
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Color
                                    </th>
                                    <th>
                                        <a asp-area="admin" asp-controller="product" asp-action="CreateImage" asp-route-prodId="@Model.Product.Id" class="btn btn-success btn-rounded btn-fw">Create</a>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int i = 1;}
                                @foreach (var item in Model.ProductImages)
                                {
                                    <tr class="text-center">
                                        <td>@i</td>
                                        <td class="py-1">
                                            <img style="border-radius: 0; width: 100px; height: auto" src="~/Uploads/Images/Product/@item.Image" alt="image">
                                        </td>
                                        <td>
                                            @item.Color.Name.ToUpper()
                                        </td>

                                        <td class="text-center">
                                            <a asp-area="admin" asp-controller="product" asp-action="UpdateImage" asp-route-id="@item.Id" class="btn btn-warning btn-sm mt-2" title="Update">Update</a>
                                            <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="product" asp-action="DeleteImage" asp-route-id="@item.Id" class="btn btn-danger btn-sm mt-2" title="Delete">Delete</a>
                                        </td>
                                    </tr>
                                    { i++; }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



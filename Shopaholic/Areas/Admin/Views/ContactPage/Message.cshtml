@model List<ContactMessage>
@{
    ViewData["Title"] = "Message";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <!--About Us-->
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Contact Messages</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Full Name
                                    </th>
                                    <th style="text-align: center">
                                        Email
                                    </th>
                                    <th style="text-align: center">
                                        Phone
                                    </th>
                                    <th style="text-align: center">
                                        Message
                                    </th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="white-space: nowrap">
                                            @(item.Name + " " + item.Surname)
                                        </td>
                                        <td>
                                            @item.Email
                                        </td>
                                        <td style="white-space: nowrap">
                                            @item.Phone
                                        </td>
                                        <td>
                                            @item.Message
                                        </td>
                                        <td>
                                            <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="contactpage" asp-action="deleteMessage" asp-route-id="@item.Id" class="btn btn-danger" title="delete"><i class="mdi mdi-delete"></i></a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



@model ContactInfo
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Update Contact Info </h4>

                    <form asp-area="admin" asp-controller="contactpage" asp-action="update" method="post" class="forms-sample">
                        @*<div class="text-danger" asp-validation-summary="All"></div>*@
                        <div class="form-group">
                            <label asp-for="@Model.Title" for="title">Title</label>
                            <input asp-for="@Model.Title" type="text" class="form-control" id="title">
                            <span class="text-danger" asp-validation-for="@Model.Title"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Desc" for="text">Answer</label>
                            <textarea asp-for="@Model.Desc" type="text" class="form-control" id="text"></textarea>
                            <span class="text-danger" asp-validation-for="@Model.Desc"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Map" for="text">Map link</label>
                            <textarea asp-for="@Model.Map" type="text" class="form-control" id="text"></textarea>
                            <span class="text-danger" asp-validation-for="@Model.Map"></span>
                            <input type="hidden" asp-for="@Model.Id" />
                        </div>


                        <button type="submit" class="btn btn-success mr-2">Update</button>
                        <button asp-area="admin" asp-controller="contactpage" asp-action="index" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@model VmUsers

@{
    ViewData["Title"] = "Users";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Users</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Full name
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Role
                                    </th>
                                    <th>
                                        Phone
                                    </th>
                                    <th>
                                        ZipCode
                                    </th>
                                    <th>
                                        Country
                                    </th>
                                    <th>
                                        State
                                    </th>
                                    <th>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CustomUsers)
                                {
                                <tr>
                                    <td class="py-1">
                                        @if (item.Image != null)
                                        {
                                <img src="~/Uploads/Images/User/@item.Image" alt="image"> }
                            else
                            {
                                <img src="https://png.pngtree.com/png-vector/20191101/ourlarge/pngtree-businessman-avatar-icon-flat-style-png-image_1917273.jpg" alt="">}
                                    </td>
                                    <td>
                                        @item.Name @item.Surname
                                    </td>
                                    <td>
                                        @item.Email
                                    </td>
                                    <td>
                                        @foreach (var role in Model.UserRoles.Where(u => u.UserId == item.Id))
                                        {
                                            foreach (var roleName in Model.Roles.Where(r => r.Id == role.RoleId))
                                            {
                                <span>@roleName</span>}
                        }
                                    </td>
                                    <td>
                                        @item.Phone
                                    </td>
                                    <td>
                                        @item.ZipCode
                                    </td>
                                    <td>
                                        @item.Country.Name
                                    </td>
                                    <td>
                                        @item.State
                                    </td>
                                    <td class="d-flex flex-row justify-content-center">
                                        <a asp-area="admin" asp-controller="account" asp-action="updateuser" asp-route-id="@item.Id" class="btn btn-warning" title="Update"><i class="mdi mdi-update"></i></a>
                                    </td>
                                </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


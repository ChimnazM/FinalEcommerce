@model CustomUser

@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row justify-content-center flex-row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Update User</h4>

                    <form asp-area="admin" asp-controller="account" asp-action="updateuser" method="post" class="forms-sample">

                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                        </div>

                        <div class="form-group">
                            <label asp-for="Surname">Surname</label>
                            <input asp-for="Surname" type="text" class="form-control" placeholder="Surname">
                        </div>

                        <div class="form-group">
                            <label asp-for="Email">Email address</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                        </div>

                        <div class="form-group">
                            <label asp-for="RoleId">Role</label>
                            <select asp-for="RoleId" asp-items="@Model.Roles" class="form-control">
                                <option disabled selected>Select role</option>
                            </select>
                        </div>
                        <input asp-for="@Model.Id" type="hidden" />

                        <div class="form-group">
                            <label asp-for="Phone">Phone</label>
                            <input asp-for="Phone" class="form-control" data-mask="(000) 000 00 00" placeholder="Phone">
                        </div>

                        <div class="form-group">
                            <label asp-for="ZipCode">ZipCode</label>
                            <input asp-for="ZipCode" class="form-control" placeholder="ZipCode">
                        </div>

                        <div class="form-group">
                            <label asp-for="CountryId">Country</label>
                            <select asp-for="CountryId" asp-items="@(new SelectList(ViewBag.Country,"Id","Name"))" class="form-control">
                                <option disabled selected>Select Country</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="State">State</label>
                            <input asp-for="State" class="form-control" placeholder="State">
                        </div>

                        <button type="submit" class="btn btn-success mr-2">Submit</button>
                        <button asp-area="admin" asp-controller="account" asp-action="users" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@model List<Payment>
@{
    ViewData["Title"] = "Payment";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Payment</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        <a asp-area="admin" asp-controller="layout" asp-action="createPayment" class="btn btn-success btn-rounded btn-fw">Add Payment</a>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            <img style="width: auto !important; height:70px !important; border-radius: 0" src="~/Uploads/Images/@item.Image" alt="image">
                                        </td>
                                        <td>
                                            <a asp-area="admin" asp-controller="layout" asp-action="updatePayment" asp-route-id="@item.Id" class="btn btn-warning" title="Update"><i class="mdi mdi-update"></i></a>
                                            <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="layout" asp-action="deletePayment" asp-route-id="@item.Id" class="btn btn-danger" title="delete"><i class="mdi mdi-delete"></i></a>
                                        </td>
                                    </tr>

                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



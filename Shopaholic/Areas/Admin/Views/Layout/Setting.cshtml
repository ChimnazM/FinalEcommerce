@model Setting
@{
    ViewData["Title"] = "Setting";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Settings</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Header Logo
                                    </th>
                                    <th>
                                        Footer Logo
                                    </th>
                                    <th>
                                        About Text
                                    </th>
                                    <th>
                                        @if (Model == null)
                                        {
                                            <a asp-area="admin" asp-controller="layout" asp-action="createsetting" class="btn btn-success btn-rounded btn-fw">Create Setting</a>
                                        }
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    <tr>
                                        <td>
                                            <img style="width: auto !important; height:70px !important; border-radius: 0" src="~/Uploads/Images/@Model.HeaderLogo" alt="image">
                                        </td>
                                        <td>
                                            <img style="width: auto !important; height:70px !important; border-radius: 0" src="~/Uploads/Images/@Model.FooterLogo" alt="image">
                                        </td>
                                        <td>
                                            @Html.Raw(Model.About)
                                        </td>
                                        <td>
                                            <a asp-area="admin" asp-controller="layout" asp-action="updatesetting" asp-route-id="@Model.Id" class="btn btn-warning" title="Update"><i class="mdi mdi-update"></i></a>
                                            <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="layout" asp-action="deletesetting" asp-route-id="@Model.Id" class="btn btn-danger" title="delete"><i class="mdi mdi-delete"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@model List<Social>
@{
    ViewData["Title"] = "Socials";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <!--Socials-->
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Socials</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Icon
                                    </th>
                                    <th>
                                        Link
                                    </th>
                                    <th>
                                        <a asp-area="admin" asp-controller="layout" asp-action="createSocial" class="btn btn-success btn-rounded btn-fw">Create Social</a>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {

                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>
                                                @item.Icon
                                            </td>
                                            <td>
                                                @item.Link
                                            </td>
                                            <td>
                                                <a asp-area="admin" asp-controller="layout" asp-action="updateSocial" asp-route-id="@item.Id" class="btn btn-warning" title="Update"><i class="mdi mdi-update"></i></a>
                                                <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="layout" asp-action="deleteSocial" asp-route-id="@item.Id" class="btn btn-danger" title="delete"><i class="mdi mdi-delete"></i></a>
                                            </td>
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


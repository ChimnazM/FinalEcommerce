@model List<Contact>
@{
    ViewData["Title"] = "ContactInfo";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <!--Contact Info-->
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Contact Info</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Address
                                    </th>
                                    <th style="text-align: center">
                                        Icon
                                    </th>
                                    <th style="text-align: center">
                                        Type
                                    </th>
                                    <th>
                                        <a asp-area="admin" asp-controller="layout" asp-action="createContactInfo" class="btn btn-success btn-rounded btn-fw">Create Contact Info</a>
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="white-space: nowrap">
                                            @item.Address
                                        </td>
                                        <td>
                                            @item.Icon
                                        </td>
                                        <td style="white-space: nowrap">
                                            @item.Type
                                        </td>
                                        
                                        <td>
                                            <a asp-area="admin" asp-controller="layout" asp-action="UpdateContactInfo" asp-route-id="@item.Id" class="btn btn-warning" title="Update"><i class="mdi mdi-update"></i></a>
                                            <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="layout" asp-action="deleteContactInfo" asp-route-id="@item.Id" class="btn btn-danger" title="delete"><i class="mdi mdi-delete"></i></a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
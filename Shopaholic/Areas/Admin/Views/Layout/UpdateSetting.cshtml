@model Setting
@{
    ViewData["Title"] = "UpdateSetting";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Update Slider</h4>
                    <form asp-area="admin" asp-controller="layout" asp-action="updateSetting" method="post" class="forms-sample" enctype="multipart/form-data">
                        @*<div class="text-danger" asp-validation-summary="All"></div>*@
                        <div class="form-group">
                            <div class="mb-3">
                                <label asp-for="@Model.HeaderImageFile" for="headerformFile" class="form-label">Input Header Logo</label>
                                <input asp-for="@Model.HeaderImageFile" class="form-control" type="file" id="headerformFile">
                                <input type="hidden" asp-for="@Model.HeaderLogo" />
                            </div>
                            <span class="text-danger" asp-validation-for="@Model.HeaderImageFile"></span>
                        </div>
                        <div class="m-4">
                            <img style="width: auto !important; height:70px !important; border-radius: 0" src="~/Uploads/Images/@Model.HeaderLogo" alt="Alternate Text" />
                        </div>
                        <div class="form-group">
                            <div class="mb-3">
                                <label asp-for="@Model.FooterImageFile" for="footerformFile" class="form-label">Input Footer Logo</label>
                                <input asp-for="@Model.FooterImageFile" class="form-control" type="file" id="footerformFile">
                                <input type="hidden" asp-for="@Model.FooterLogo" />
                            </div>
                            <span class="text-danger" asp-validation-for="@Model.FooterImageFile"></span>
                        </div>
                        <div class="m-4">
                            <img style="width: auto !important; height:70px !important; border-radius: 0" src="~/Uploads/Images/@Model.FooterLogo" alt="Alternate Text" />
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.About" for="about">About</label>
                            <textarea asp-for="@Model.About" type="text" class="form-control" id="about" placeholder="About"></textarea>
                            <span class="text-danger" asp-validation-for="@Model.About"></span>
                            <input type="hidden" asp-for="@Model.Id" />
                        </div>

                        <button type="submit" class="btn btn-success mr-2">Update</button>
                        <button asp-area="admin" asp-controller="layout" asp-action="setting" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



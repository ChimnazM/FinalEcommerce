@model Contact
@{
    ViewData["Title"] = "UpdateContactInfo";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Update Contact Info</h4>

                    <form asp-area="admin" asp-controller="layout" asp-action="updateContactInfo" method="post" class="forms-sample">
                        @*<div class="text-danger" asp-validation-summary="All"></div>*@
                        <div class="form-group">
                            <label asp-for="@Model.Address" for="address">Address</label>
                            <input asp-for="@Model.Address" class="form-control" id="address" placeholder="Address">
                            <span class="text-danger" asp-validation-for="@Model.Address"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Icon" for="icon">Icon</label>
                            <input asp-for="@Model.Icon" class="form-control" id="icon" placeholder="Icon">
                            <span class="text-danger" asp-validation-for="@Model.Icon"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.Type" for="type">Type</label>
                            <select asp-for="@Model.Type" class="form-control" id="type">
                                <option val="Address">Address</option>
                                <option val="Phone">Phone</option>
                                <option val="Email">Email</option>
                            </select>
                            <span class="text-danger" asp-validation-for="@Model.Type"></span>
                            <input type="hidden" asp-for="@Model.Id" />
                        </div>


                        <button type="submit" class="btn btn-success mr-2">Update</button>
                        <button asp-area="admin" asp-controller="layout" asp-action="contactInfo" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



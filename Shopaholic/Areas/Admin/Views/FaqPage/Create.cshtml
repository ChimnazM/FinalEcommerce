@model Faq
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create Faq </h4>

                    <form asp-area="admin" asp-controller="faqpage" asp-action="create" method="post" class="forms-sample">
                        @*<div class="text-danger" asp-validation-summary="All"></div>*@
                        <div class="form-group">
                            <label asp-for="@Model.Question" for="uptitle">Question</label>
                            <input asp-for="@Model.Question" type="text" class="form-control" id="uptitle" >
                            <span class="text-danger" asp-validation-for="@Model.Question"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Answer" for="text">Answer</label>
                            <textarea asp-for="@Model.Answer" type="text" class="form-control" id="text" ></textarea>
                            <span class="text-danger" asp-validation-for="@Model.Answer"></span>
                        </div>
                        <div class="form-group">
                            <div class="form-check form-check-flat">
                                <label asp-for="@Model.IsGeneral" class="form-check-label">
                                    <input asp-for="@Model.IsGeneral" type="checkbox" class="form-check-input">
                                    Is General question?
                                    <i class="input-helper"></i>
                                </label>
                            </div>
                            
                        </div>

                        <button type="submit" class="btn btn-success mr-2">Create</button>
                        <button asp-area="admin" asp-controller="faqpage" asp-action="index" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



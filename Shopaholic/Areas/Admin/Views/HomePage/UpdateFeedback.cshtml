@model Feedback
@{
    ViewData["Title"] = "UpdateFeedback";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Update Feedback</h4>

                    <form asp-area="admin" asp-controller="homepage" asp-action="updateFeedback" method="post" class="forms-sample" enctype="multipart/form-data">
                        @*<div class="text-danger" asp-validation-summary="All"></div>*@
                        <div class="form-group">
                            <label asp-for="@Model.FullName" for="fullname">FullName</label>
                            <input asp-for="@Model.FullName" type="text" class="form-control" id="fullname" placeholder="FullName">
                            <span class="text-danger" asp-validation-for="@Model.FullName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Proffession" for="proffession">Proffession</label>
                            <input asp-for="@Model.Proffession" type="text" class="form-control" id="proffession" placeholder="Proffession">
                            <span class="text-danger" asp-validation-for="@Model.Proffession"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Text" for="text">Text</label>
                            <textarea asp-for="@Model.Text" type="text" class="form-control" id="text" placeholder="Text"></textarea>
                            <span class="text-danger" asp-validation-for="@Model.Text"></span>
                        </div>
                        <div class="form-group">
                            <div class="mb-3">
                                <label asp-for="@Model.ImageFile" for="formFile" class="form-label">Input File</label>
                                <input asp-for="@Model.ImageFile" class="form-control" type="file" id="formFile">
                            </div>
                            <span class="text-danger" asp-validation-for="@Model.ImageFile"></span>
                            <input type="hidden" asp-for="@Model.Id" />
                            <input type="hidden" asp-for="@Model.Image" />
                        </div>
                        <div class="mt-3 mb-3">
                            <img src="~/Uploads/Images/@Model.Image" height="100" alt="Alternate Text" />
                        </div>



                        <button type="submit" class="btn btn-success mr-2">Update</button>
                        <button asp-area="admin" asp-controller="homepage" asp-action="testimonial" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



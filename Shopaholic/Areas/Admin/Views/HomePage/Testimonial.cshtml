@model VmTestimonial
@{
    ViewData["Title"] = "Testimonial";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!--Testimonial-->
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Testimonial</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Up Title
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Info
                                    </th>
                                    <th>
                                        @if (Model.Testimonial == null)
                                        {
                                            <a asp-area="admin" asp-controller="homepage" asp-action="createTestimonial" class="btn btn-success btn-rounded btn-fw">Create Testimonial</a>
                                        }
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>

                                    <td>
                                        @(Model.Testimonial != null? Model.Testimonial.UpTitle:"")
                                    </td>
                                    <td>
                                        @(Model.Testimonial != null? Model.Testimonial.Title : "")
                                    </td>
                                    <td>
                                        @Html.Raw(Model.Testimonial != null ? Model.Testimonial.Info : "")
                                    </td>
                                    <td>
                                        <a asp-area="admin" asp-controller="homepage" asp-action="updateTestimonial" asp-route-id="@Model.Testimonial.Id" class="btn btn-warning" title="Update"><i class="mdi mdi-update"></i></a>
                                        <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="homepage" asp-action="deleteTestimonial" asp-route-id="@Model.Testimonial.Id" class="btn btn-danger" title="delete"><i class="mdi mdi-delete"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Feedbacks-->
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Feedbacks</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr class="text-center">
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Full Name
                                    </th>
                                    <th>
                                        Profession
                                    </th>
                                    <th>
                                        Text
                                    </th>
                                    <th>
                                        <a asp-area="admin" asp-controller="homepage" asp-action="createFeedback" class="btn btn-success btn-rounded btn-fw">Add Feedback</a>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Feedbacks)
                                {
                                    <tr>

                                        <td>
                                            <img style="width: auto !important; height:70px !important; border-radius: 0" src="~/Uploads/Images/@item.Image" alt="image">
                                        </td>
                                       
                                        <td style="white-space: nowrap">
                                            @item.FullName
                                        </td>
                                        <td>
                                            @item.Proffession
                                        </td>
                                        <td>
                                            @Html.Raw(item.Text)
                                        </td>
                                        <td>
                                            <a asp-area="admin" asp-controller="homepage" asp-action="updateFeedback" asp-route-id="@item.Id" class="btn btn-warning" title="Update"><i class="mdi mdi-update"></i></a>
                                            <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="homepage" asp-action="deleteFeedback" asp-route-id="@item.Id" class="btn btn-danger" title="delete"><i class="mdi mdi-delete"></i></a>
                                        </td>
                                    </tr>

                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


